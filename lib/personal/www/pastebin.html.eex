<main class="centered">
  <section class="accent">
    <%= case state do %>
      <% {:not_logedin} -> %>
        <h2> This is a private paste, login first!</h2>
      <% {:open, paste} -> %>
          <h1> <%=paste.name%> </h1>
          <%=if paste.can_edit do %>
            <textarea>
              <%=raw paste.content%>
            </textarea>
            </p>
            <button>resubmit</button>
          <% else %>
            <code>
              <%=raw paste.content%>
            </code>
          <%end%>
      <% {:loged_in, paste} -> %>
            <-!--- handled by javascript  ---->
    <%end%>
  </section>
</main>
